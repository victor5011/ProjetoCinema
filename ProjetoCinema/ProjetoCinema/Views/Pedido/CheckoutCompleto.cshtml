@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente:<strong>@Model.Cliente.Nome</strong></p>
            <p>Numero do Pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th>Poster</th>
                    <th>Quantidade</th>
                    <th>Filme</th>
                    <th>Preço</th>
                </tr>

                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Ingressos.Filmes.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Ingressos.Filmes.Nome</td>
                        <td>@item.Ingressos.Preco</td>
                    </tr>
                }
            </table>
            <h4>Valor Total do Pedido:<strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align: center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>