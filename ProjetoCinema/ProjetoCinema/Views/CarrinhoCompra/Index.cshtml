@model CarrinhoCompraViewModel

<div class="container">
<div class="row">
    

    <div>

            <h4><img src="~/imagens/carrinho.png" /> Seu Carrinho de Compras:</h4>
    </div>

    <table class="table table-bordered table-striped">
        
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Filme</th>
                <th class="text-right">Preço</th>
                <th class="text-right">SubTotal</th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
            @foreach(var item in Model.CarrinhoCompra.carrinhoCompraItems)
            {
               <tr>
                   <td class="text-center">@item.Quantidade</td>
                   <td class="text-left">@item.Ingressos.Filmes.Nome</td>
                   <td class="text-right">@item.Ingressos.Preco.ToString("c")</td>

                   <td class="text-right">
                       @((item.Quantidade*item.Ingressos.Preco).ToString("c"))
                   </td>

                   <td class="text-center">
                       <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                       asp-route-ingressoId="@item.Ingressos.Id"><img src="~/imagens/lixeira.png"/></a>
                   </td>

               </tr>                 
            }
        </tbody>
        
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CarrinhoCompraTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>
        <div class="text-right">
            <div class="btn-group">
                <form asp-controller="Pedido" asp-action="Checkout" method="post">
                    <input type="hidden" name="carrinhoId" value="@Model.CarrinhoCompra.CarrinhoCompraID">
                    <input type="submit" class="btn btn-success" value="Encerrar Pedido"
                    
                </form>
                
                    &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Filme" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
</div>
</div>