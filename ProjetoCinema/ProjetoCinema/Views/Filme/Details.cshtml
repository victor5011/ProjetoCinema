@model Filmes

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="">
            </div>
            
            <div class="card-body">
                
                <h2 class="card-title">@Model.Nome</h2>
                
                <p class="card-text"><h5>@Model.Sinopse</h5></p>
                
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Filme" asp-action="List" class="btn btn-outline-info">
                        Ver todos os Filmes
                    </a>
                
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-Id="@Model.Id">
                        Adicionar @Model.Nome ao Carrinho
                    </a>
                </p>
            </div>
            
        </div>
    </div>
</div>
