@model ProjetoCinema.Models.Cadeiras

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Salas</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salas.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salas.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @if(Model.Status==true)
        {
            <dd class="col-sm-10">
                Vazio
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ocupado
            </dd>
        }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
