<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoCinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoCinema.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <form asp-area="Admin" asp-controller="Admin" asp-action="Index">
                    <button type="submit" style="width:auto" class="nav-link btn btn-link py-0">
                        <img src="~/imagens/Cinema.png" />
                    </button>
                </form>
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cinemax</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    
                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Edit">Editar Dados</a>
                    
                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminPedidos" asp-action="Index">Pedidos</a>

                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminCadeiras" asp-action="Index">Cadeiras</a>

                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminSalas" asp-action="Index">Salas</a>
                    
                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminCategorias" asp-action="Index">Categoria</a>
                    
                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminFilmes" asp-action="Index">Filmes</a>

                    @*<a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a>*@
                
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ProjetoCinema - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>